<%= render "partial/index" %>
<div class="row">
	<h2>
	Article
    </h2>
	<div class="col-md-6">
	<h4>Write by: <%= @articles.user.email %></h4>
	<h4><%= @articles.title %></h4>

		<p><%= @articles.body %> -  <%= link_to "Edit", edit_article_path(@articles) %></p>
	

	<p>Visits: <%= @articles.visits_count %></p>
	<h2>
	Comments
    </h2>

    <table>
	  <thead>
	    <tr>
	      <th>User</th>
	      <th>Article</th>
	      <th>Body</th>
	    </tr>
	  </thead>

	  <tbody id="comments-box">
	    <% @articles.comments.each do |comment| %>
	   
	      <tr>
	        <td><%= comment.user.email %> </td>
	        <td><%= comment.article.title %> </td>
	        <td><%= comment.body %></td>	        
	      </tr>

	    <% end %>

	 
	  </tbody>
	</table>

<h4>new comment</h4>
    <%= form_for([@articles,@comment], remote: true, html: { id: "comments-form" ,:"data-type" => "json"}) do |f| %>  
	  
	  <div class="field">
	    <%= f.label :body %><br>
	    <%= f.text_area :body %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>

    </div>

</div>
